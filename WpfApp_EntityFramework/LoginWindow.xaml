<Window x:Class="WpfApp_EntityFramework.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_EntityFramework"
        mc:Ignorable="d"
        Title="Đăng nhập hệ thống" Height="300" Width="595">
    <Grid>
        <Label Content="Đăng nhập hệ thống" FontSize="30" Foreground="Blue" HorizontalAlignment="Left" Margin="217,19,0,0" VerticalAlignment="Top"/>
        <Label Content="Email Address:" FontSize="20" HorizontalAlignment="Left" Margin="45,74,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtEmail" FontSize="20" HorizontalAlignment="Left" Margin="217,80,0,0" TextWrapping="Wrap" Text="admin@CompanyName.com" VerticalAlignment="Top" Width="368"/>
        <Label Content="Password:" FontSize="20" HorizontalAlignment="Left" Margin="45,132,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="txtPassword" FontSize="20" HorizontalAlignment="Left" Margin="217,142,0,0" VerticalAlignment="Top" Width="368" Password="@1"/>
        <Button x:Name="btnLogin" Content="Đăng nhập" FontSize="20" HorizontalAlignment="Left" Margin="217,194,0,0" VerticalAlignment="Top" Width="113" Height="41" Click="btnLogin_Click"/>
        <Button x:Name="btnExit" Content="Thoát" FontSize="20" HorizontalAlignment="Left" Margin="460,194,0,0" VerticalAlignment="Top" Width="113" Height="41"/>

    </Grid>
</Window>
