<Window x:Class="MyStoreWpfApp_EntityFrameWork.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyStoreWpfApp_EntityFrameWork"
        mc:Ignorable="d"
        Title="Đăng nhập hệ thống" Height="300" Width="595">
    <Grid>
        <Label Content="Đăng nhập hệ thống" FontSize="25" HorizontalAlignment="Left" Margin="180,34,0,0" VerticalAlignment="Top">
            <Label.Background>
                <LinearGradientBrush>
                    <GradientStop Offset="0.0" Color="Yellow"></GradientStop>
                    <GradientStop Offset="0.5" Color="Blue"></GradientStop>
                    <GradientStop Offset="1.0" Color="Red"></GradientStop>
                </LinearGradientBrush>
            </Label.Background>
        </Label>
        <Label Content="User Name:" FontSize="20" HorizontalAlignment="Left" Margin="53,105,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Margin="200,114,0,0" TextWrapping="Wrap" Text="admin@CompanyName.com" FontSize="20" VerticalAlignment="Top" Width="295"/>
        <Label Content="Password:" FontSize="20" HorizontalAlignment="Left" Margin="53,156,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="txtPassword" FontSize="20" HorizontalAlignment="Left" Margin="200,165,0,0" VerticalAlignment="Top" Width="295" Password="@1"/>
        <Button x:Name="btnDangNhap" Content="Đăng nhập" FontSize="20" HorizontalAlignment="Left" Margin="200,219,0,0" VerticalAlignment="Top" Click="btnDangNhap_Click"/>
        <Button x:Name="btnThoat" Content="Thoát" FontSize="20" HorizontalAlignment="Left" Margin="360,219,0,0" VerticalAlignment="Top" Width="104"/>

    </Grid>
</Window>
